{
  "version": 2,
  "builds": [
    { "src": "api.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/bypass", "dest": "api.py" },
    { "src": "/supported", "dest": "api.py" },
    { "handle": "filesystem" },  // Handles static files
    { "src": "/(.*)", "dest": "/public/index.html" }  // Fallback to index.html
  ],
  "static": {
    "directory": "public"
  }
}
